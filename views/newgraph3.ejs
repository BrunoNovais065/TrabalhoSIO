<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chart Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      .custom-container {
        padding: 20px;
      }
      .chart-container {
        position: relative;
        height: 600px;
        width: 600px;
        margin: 0 auto; /* Centering the chart */
      }
      .top3 {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-left: 20px;
      }
      .dropdowns {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
      }
      .top3 {
        margin-bottom: 20px;
      }
      .charts {
        display: flex;
        justify-content: space-around;
      }
      .chart-container {
        width: 100%;
        max-width: 600px;
      }
      .chart-label {
        text-align: center;
        font-weight: bold;
      }
      #countryDropdown {
        display: none; /* Initially hidden */
      }
    </style>
  </head>
  <body>
    <div class="custom-container">
      <button class="btn btn-primary mb-3" onclick="goBack()">Back</button>
      <div class="dropdowns">
        <div class="dropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="button"
            id="dropdownMenuButton2"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Trim
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
            <li>
              <a class="dropdown-item" href="directory3/Q1/aquiEmpresa">Q1</a>
            </li>
            <li>
              <a class="dropdown-item" href="directory3/Q2/aquiEmpresa">Q2</a>
            </li>
            <li>
              <a class="dropdown-item" href="directory3/Q3/aquiEmpresa">Q3</a>
            </li>
            <li>
              <a class="dropdown-item" href="directory3/Q4/aquiEmpresa">Q4</a>
            </li>
          </ul>
        </div>
        <div class="dropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="button"
            id="dropdownMenuButton3"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Month
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton3">
            <!-- Month options -->
          </ul>
        </div>
        <div class="dropdown" id="countryDropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="button"
            id="dropdownMenuButton4"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Country
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton4">
            <!-- Country options -->
          </ul>
        </div>
        <button class="btn btn-danger" onclick="removeFilters()">
          Remove Filters
        </button>
      </div>
      <div class="top3">
        <h2>Top 3</h2>
        <span>1</span>
        <span>2</span>
        <span>3</span>
      </div>
      <div class="chart-container">
        <canvas id="barChart" width="3900" height="3900"></canvas>
        <p class="chart-label">Districts</p>
      </div>
    </div>

    <script>
      function goBack() {
        window.location.href = "/";
      }

      function removeFilters() {
        // Logic to reset the filters
        document.getElementById("dropdownMenuButton2").textContent = "Trim";
        document.getElementById("dropdownMenuButton3").textContent = "Month";
        document.getElementById("dropdownMenuButton4").textContent = "Country";
        // Add any additional logic needed to reset the charts or reload data
        //set to the href of the page witch is directory5 make it post to the server

        //aqui adicionar o dados da empresa que Ã©
        //TODO:
        window.location.href = "/directory5";
      }

      // Check if the variable 'pais' is equal to 'Eletrotech'
      var pais = "Eletrotech"; // This should be dynamically set
      if (pais === "Eletrotech") {
        document.getElementById("countryDropdown").style.display = "block";
      }

      // Bar Chart
      const barCtx = document.getElementById("barChart").getContext("2d");
      const barChart = new Chart(barCtx, {
        type: "bar",
        data: {
          labels: [
            "District 1",
            "District 2",
            "District 3",
            "District 4",
            "District 5",
          ],
          datasets: [
            {
              label: "Population",
              data: [12, 19, 3, 5, 2],
              backgroundColor: "rgba(75, 192, 192, 0.2)",
              borderColor: "rgba(75, 192, 192, 1)",
              borderWidth: 1,
            },
          ],
        },
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  </body>
</html>
